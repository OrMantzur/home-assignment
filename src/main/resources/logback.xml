<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="HumanReadableAppender" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                %d{yyyy-MM-dd HH:mm:ss} [%thread] %highlight(%-5level) %logger{36} - %msg%n
            </Pattern>
        </layout>
    </appender>

    <logger name="org.assignment" level="INFO"/>

    <root level="INFO">
        <appender-ref ref="HumanReadableAppender"/>
    </root>

</configuration>